                    <div class="shop-cart">
                      <div class="row">
                        <div class="col-12 col-xl-8">
                          <div class="shop-cart-list">
                            <input type="hidden" value="<%= totalData %>" id="totalCartData">
                            <% var total=0; var i=0; for(var cd of cartData){ %>
